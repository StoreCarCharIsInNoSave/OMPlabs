program Project1;

(*
  Орловский ПМ-12 Вариант 15
  23.	Дан целочисленный вектор А(n).
  Найти наибольшее из четных и количество нечетных элементов вектора.
  На печать выдавать исходный вектор и полученный результат.
  без передачи параметров
*)
{$APPTYPE CONSOLE}
{$R *.res}

uses
  System.SysUtils;

var
  vector: array of integer;

var
  evenCount, max, n, indexMax: integer;

var
  flag: boolean;

Procedure FillArray();
begin
  writeln('Введите размер массива');
  readln(n);
  setlength(vector, n);
  for var i := 0 to n - 1 do
  begin
    write('Vector[', i, '] = ');
    readln(vector[i]);
  end;
end;

Procedure FindMaxEven();
begin
  for var i := 0 to n - 1 do
    if vector[i] mod 2 = 0 then
    begin
      max := vector[i];
      flag := true;
    end;

  if flag then begin
    for var i := 0 to n - 1 do
    begin
      if (max < vector[i]) and (vector[i] mod 2 = 0) then
        max := vector[i];
    end;
    writeln('Наибольший четный элемент = ',max);
  end
  else
    writeln('четных элементов не обнаружено');
end;

procedure ShowArray();
begin
for var i := 0 to n - 1 do
  begin
    write(vector[i],' ');
  end;
end;

Procedure CountOfNotEven();
var count:integer;
begin
count:=0;
for var i := 0 to n-1 do if vector[i] mod 2 <> 0 then inc(count);
writeln('Количество нечетных элементов = ',count);
end;

begin
  FillArray();
  FindMaxEven();
  CountOfNotEven();
  ShowArray();
  readln;

end.
