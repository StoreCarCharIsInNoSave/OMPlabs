program Project1;

(*
  Орловский ПМ-12 Вариант 15
  18.	Дан целочисленный вектор А(n).
  Поменять местами максимальный и минимальный эле-менты вектора.
*)
{$APPTYPE CONSOLE}
{$R *.res}

uses
  System.SysUtils;

var
  vector: array of integer;

var
  n: integer;

Procedure FillArray( var vector: array of integer; const size: integer);
begin
  for var i := 0 to size - 1 do
  begin
    write('Vector[', i, '] = ');
    readln(vector[i]);
  end;
end;

var
  vec: array of integer;

begin
  writeln('Введите размерность');
  readln(n);
  setlength(vec,n);
  FillArray(vec, n);
  for var i := 0 to n - 1 do
  begin
    writeln('Vector[', i, '] = ',vector[i]);
  end;
    readln;
end.
