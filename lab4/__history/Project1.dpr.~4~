program Project1;
(*
  ќрловский ¬ариант 15
  ƒан текст, слова которого отдел€ютс€ друг от друга пробелами.
  —лова, ко-торые заканчиваютс€ той же буквой, что и первое слово,
  если оно макси-мальное по длине, поместить в конец текста.
  –аспечатать исходный текст, первое слово,
  если оно максимальное по длине, и полученный текст.

*)
{$APPTYPE CONSOLE}
{$R *.res}

uses
  System.SysUtils;

var
  arr: TArray<string>;

begin

  var
    text: string :=
      'ƒанблаблабла текст слова которого отличаютс€ друг от друга пробелами';
  arr := text.Split([' ']);
  var
    max: string := arr[0];

  for var i := 0 to length(arr) - 1 do
    if max.length < arr[i].length then
      max := arr[i];

  if max <> arr[0] then
  begin
    writeln('ѕервое слово не €вл€етс€ максимальным');
    writeln(text);

  end
  else
  begin
    writeln('ѕервое слово €вл€етс€ максимальным');


    for var i := 0 to length(arr) - 1 do
    begin



    if arr[i][arr[i].Length]=arr[0][arr[0].length] then
    for var j := i to length(arr)-2 do begin
      var temp:string:=arr[j+1];
      arr[j+1]:=arr[j];
      arr[j]:=temp;
    end;





    end;
    writeln(text);
    for var i := 0 to length(arr)-1 do write(arr[i], ' ');

  end;

  readln;

end.
