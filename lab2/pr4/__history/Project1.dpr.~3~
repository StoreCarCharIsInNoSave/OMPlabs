program Project1;

{$APPTYPE CONSOLE}
{$R *.res}

uses
  System.SysUtils;

var
  n, i, j: integer;

var
  matrix: array of array of integer;

begin
  writeln('¬ведите размер квадратной матрицы');
  readln(n);
  setlength(matrix, n);
  for i := 0 to n - 1 do
  begin
    setlength(matrix[i], n);
  end;

  for i := 0 to n - 1 do
  begin
    for j := 0 to n - 1 do
    begin
      write('Matrix[', i, '] = ');
      readln(matrix[i][j]);
    end;
  end;

end.
